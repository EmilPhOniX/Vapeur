generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Jeux {
  id             Int         @id @default(autoincrement())
  title          String      
  description    String      
  releaseDate    DateTime    @default(now())
  genreId        Int
  genre          GenreDeJeux @relation(fields: [genreId], references: [idGenre])
  editeurId      Int
  editeur        EditeursDeJeux @relation(fields: [editeurId], references: [idEditeur]) 
}                            
                                   
model GenreDeJeux {           
  idGenre             Int         @id @default(autoincrement())
  genre          String
  jeux           Jeux[]
}

model EditeursDeJeux {
  idEditeur      Int     @id @default(autoincrement())
  editeur        String
  jeux           Jeux[]
}