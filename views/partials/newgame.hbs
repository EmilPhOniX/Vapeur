<form action="/games" method="POST">
    <label for="title">Titre :</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description :</label>
    <textarea id="description" name="description" required></textarea><br>

    <label for="releaseDate">Date de sortie :</label>
    <input type="date" id="releaseDate" name="releaseDate" required><br>

    <label for="genre">Genre :</label>
    <select id="genre" name="genre" required>
        {{#each genres}}
            <option value="{{this.idGenre}}">{{this.genre}}</option>
        {{/each}}
    </select><br>

    <label for="editeur">Éditeur :</label>
    <select id="editeur" name="editeur" required>
        {{#each publishers}}
            <option value="{{this.id}}">{{this.editeur}}</option>
        {{/each}}
    </select><br>

    <label for="isFeatured">Mis en avant :</label>
    <input type="checkbox" id="isFeatured" name="isFeatured"><br>

    <button type="submit">Créer</button>
</form>