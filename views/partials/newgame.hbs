<form action="/games" method="POST">
    <label for="title">Titre :</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description :</label>
    <textarea id="description" name="description" required></textarea><br>

    <label for="releaseDate">Date de sortie :</label>
    <input type="date" id="releaseDate" name="releaseDate" required><br>

    <label for="genreId">Genre ID :</label>
    <input type="number" id="genreId" name="genreId" required><br>

    <label for="editeurId">Éditeur ID :</label>
    <input type="number" id="editeurId" name="editeurId" required><br>

    <label for="isFeatured">Mis en avant :</label>
    <input type="checkbox" id="isFeatured" name="isFeatured"><br>

    <button type="submit">Créer</button>
</form>